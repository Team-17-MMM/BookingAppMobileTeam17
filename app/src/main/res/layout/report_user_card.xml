<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border_background"
    android:elevation="4dp"
    android:layout_margin="10dp"
    android:paddingVertical="5dp"
    android:id="@+id/report_user_card">

    <!-- Report Icon -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Description of Review -->
        <TextView
            android:id="@+id/review_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/review_comment"
            android:layout_margin="5dp"
            android:textSize="14sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Clock Icon for Date -->


            <!-- Date of Review -->
            <TextView
                android:id="@+id/review_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 9, 2024"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/review_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 9, 2024"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"/>



            <!-- Rating of Review -->

        </LinearLayout>

        <EditText
            android:id="@+id/editTextReportDescription"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="13"
            android:inputType="text"
            android:hint="Description"
            />

    </LinearLayout>

    <Button
        android:id="@+id/report_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/baseline_announcement_24_red"
        android:layout_margin="8dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/delete_review_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/baseline_clear_24"
        android:layout_margin="8dp"
        android:visibility="gone"
        />

</LinearLayout>