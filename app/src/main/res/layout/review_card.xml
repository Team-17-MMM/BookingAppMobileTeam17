<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border_background"
    android:elevation="4dp"
    android:layout_margin="10dp"
    android:paddingVertical="5dp"
    android:id="@+id/review_card">

    <!-- Report Icon -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Description of Review -->
        <TextView
            android:id="@+id/review_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/review_comment"
            android:layout_margin="5dp"
            android:textSize="14sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Clock Icon for Date -->
            <ImageView
                android:id="@+id/date_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/baseline_access_time_24"
                android:layout_margin="8dp"
                app:tint="@android:color/darker_gray" />

            <!-- Date of Review -->
            <TextView
                android:id="@+id/review_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 9, 2024"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <!-- Rating of Review -->
            <RatingBar
                android:id="@+id/review_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4"
                style="@style/Widget.AppCompat.RatingBar.Small"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/report_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/baseline_announcement_24_red"
        android:layout_margin="8dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/delete_review_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/baseline_clear_24"
        android:layout_margin="8dp"
        android:visibility="gone"
        />

</LinearLayout>
