<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.HomeActivity">
    <ImageView
        android:id="@+id/accommodation_details_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/zlatibor"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"
        />
    <LinearLayout
        android:id="@+id/accommodation_details_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/accommodation_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Krila Zlatibora"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="20dp"
            />
        <TextView
            android:id="@+id/details_border1"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="20sp"
            android:background="@color/gray"
            />
    </LinearLayout>


    <ScrollView
        android:id="@+id/accommodation_scrollable_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/accommodation_details_reservation_button"
        app:layout_constraintTop_toBottomOf="@+id/accommodation_details_description">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/accommodation_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginHorizontal="20dp"
            android:text="@string/kopaonik_hotel_desc"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/countryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:enabled="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Address -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:enabled="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Min persons">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/minPersonsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:enabled="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Max persons">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/maxPersonsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:enabled="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/checkboxGroupAccommodationType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkboxApartment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="APARTMENT"
                android:enabled="false"/>


            <CheckBox
                android:id="@+id/checkboxStudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="STUDIO"
                android:enabled="false"/>

            <CheckBox
                android:id="@+id/checkboxRoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="ROOM"
                android:enabled="false"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amenities"
            android:fontFamily="@font/righteous"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginVertical="10sp" />

        <GridLayout
            android:id="@+id/checkboxContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:fontFamily="@font/righteous"/>

        <Button
            android:id="@+id/accommodation_details_reservation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="20sp"
            android:fontFamily="@font/righteous"
            android:text="Create reservation"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools2:layout_editor_absoluteX="20dp" />

        <Button
            android:id="@+id/accommodation_details_add_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="20sp"
            android:fontFamily="@font/righteous"
            android:text="Add to favorite"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools2:layout_editor_absoluteX="20dp" />


<!--        button for reviews-->
        <Button
            android:id="@+id/rate_host_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="20sp"
            android:fontFamily="@font/righteous"
            android:text="@string/host_reviews"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools2:layout_editor_absoluteX="20dp"
            android:visibility="visible"/>

    </LinearLayout>

    </ScrollView>

</LinearLayout>