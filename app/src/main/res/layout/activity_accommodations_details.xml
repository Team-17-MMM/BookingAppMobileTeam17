<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.HomeActivity">
    <ImageView
        android:id="@+id/accommodation_details_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/zlatibor"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"
        />
    <LinearLayout
        android:id="@+id/accommodation_details_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/accommodation_details_image">

        <TextView
            android:id="@+id/accommodation_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Krila Zlatibora"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="20dp"
            />
        <TextView
            android:id="@+id/details_border1"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="20sp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/accommodation_details_title"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/accommodation_details_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:text="@string/kopaonik_hotel_desc"
        app:layout_constraintBottom_toTopOf="@id/accommodation_details_price_layout"
        app:layout_constraintTop_toBottomOf="@+id/accommodation_details_title_layout"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/accommodation_details_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/accommodation_details_reservation_button">
        <TextView
            android:id="@+id/details_border2"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginHorizontal="20sp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/accommodation_details_description"
            />

        <LinearLayout
            android:id="@+id/accommodation_details_price_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/details_border2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nightly price:"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/accommodation_details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1800"
                android:textSize="24sp"
                android:layout_marginLeft="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSD"
                android:textSize="24sp"
                android:layout_marginHorizontal="5sp"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/accommodation_details_reservation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginHorizontal="20sp"
        android:fontFamily="@font/righteous"
        android:text="Create reservation"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools2:layout_editor_absoluteX="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>