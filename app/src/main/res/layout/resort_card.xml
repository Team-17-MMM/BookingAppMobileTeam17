<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_marginVertical="10dp"
    android:orientation="vertical"
    android:id="@+id/resort_card_item">
    <TextView
        android:id="@+id/top_border"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginVertical="10sp"
        android:background="@color/gray"
        />


    <LinearLayout
        android:background="@drawable/border_background_blue"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/resort_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/righteous"
                android:text="Hotel Grand Kopaonik"
                android:textSize="18sp"
                android:textStyle="bold"
/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/resort_image"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/hotel_grand_kop"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:elevation="4sp"
                    android:padding="8sp"
                    android:layout_gravity="bottom">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/resort_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Moderan i udoban hotel Grand Kopaonik se nalazi na 1.770 metara nadmorske visine u samom centru Kopaonika i nudi veličanstveni pogled na Nacionalni park Kopaonik."
                            android:fontFamily="@font/righteous"
                            android:textSize="14sp"
                            android:textStyle="italic"

                            android:paddingBottom="10sp"/>
                    </ScrollView>

                    <TextView
                        android:id="@+id/resort_detalji"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="@string/detalji"
                        android:background="@drawable/button_background_blue"
                        android:textSize="20sp"
                        android:fontFamily="@font/righteous"
                        android:textColor="@color/white"
                        android:paddingHorizontal="10sp"
                        android:paddingVertical="2sp"
                        android:layout_gravity="center|bottom"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
