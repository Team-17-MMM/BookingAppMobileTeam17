<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="horizontal"
    android:background="@drawable/border_background"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/resort_card_item"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/resort_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Hotel Grand Kopaonik"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/resort_image"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/hotel_grand_kop"
                android:padding="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:layout_margin="8dp"
                android:padding="8dp">
                <TextView
                    android:id="@+id/resort_description"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:text="Moderan i udoban hotel Grand Kopaonik se nalazi na 1.770 metara nadmorske visine u samom centru Kopaonika i nudi veličanstveni pogled na Nacionalni park Kopaonik."
                    android:textSize="14sp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/resort_detalji"
                    android:layout_width="match_parent"
                    android:textAlignment="viewEnd"
                    android:layout_height="30dp"
                    android:text="@string/detalji"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    </LinearLayout>