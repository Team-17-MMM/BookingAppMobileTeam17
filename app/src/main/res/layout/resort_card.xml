<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="horizontal"
    android:background="@drawable/border_background"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/product_card_item"
    >
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/hotel_grand_kop"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/resort_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:text="@string/kopaonik_hotel"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/resort_description"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:text="@string/kopaonik_hotel_desc"
            android:textSize="14sp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/detalji"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:text="@string/detalji"
            android:textSize="20sp"
            android:textStyle="bold"/>



    </LinearLayout>
</LinearLayout>